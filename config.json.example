{
  "splunk": {
    "_comment": "Splunk connection settings. For security, use environment variables or AWS Secrets Manager instead of plain text credentials.",
    "host": "splunk.example.com",
    "port": 8089,
    "scheme": "https",
    "username": "your_username",
    "password": "your_password",
    "_security_options": {
      "use_secrets_manager": false,
      "secrets_manager_secret_name": "splunk/credentials",
      "_note": "Set use_secrets_manager to true and provide secret_name to use AWS Secrets Manager. Or set environment variables: SPLUNK_HOST, SPLUNK_PORT, SPLUNK_USERNAME, SPLUNK_PASSWORD, SPLUNK_SCHEME"
    }
  },
  "aws": {
    "region": "us-east-1",
    "profile": "default",
    "s3_bucket": "your-observables-bucket",
    "s3_prefix": "observables",
    "dynamodb_table": "observable_catalog",
    "rds": {
      "_comment": "RDS connection settings. Use environment variables or AWS Secrets Manager for security.",
      "host": "your-rds-endpoint.region.rds.amazonaws.com",
      "port": 5432,
      "database": "observables_db",
      "user": "db_user",
      "password": "db_password",
      "_security_options": {
        "use_secrets_manager": false,
        "secrets_manager_secret_name": "rds/observables-db",
        "_note": "Set use_secrets_manager to true and provide secret_name. Or set environment variables: RDS_HOST, RDS_PORT, RDS_DATABASE, RDS_USER, RDS_PASSWORD"
      }
    }
  }
}

